@model PracticaMVC.Models.Usuario

@{
    ViewData["Title"] = "Cambiar Avatar";
}

<h1>Editar Avatar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CambiarAvatar" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="AvatarFile" class="control-label"></label>
                <input asp-for="AvatarFile" id="avatar_input" type="file" class="form-control btn btn-info" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img style="width:100%" class="" src="@Model.Avatar" alt="" id="avatar_img">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Perfil">Volver al perfil</a>
</div>

