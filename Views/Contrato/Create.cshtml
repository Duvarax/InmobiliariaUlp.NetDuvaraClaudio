@model PracticaMVC.Models.Contrato

@{
    ViewData["Title"] = "Creacion de contratos";
    var Inquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var Inmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
}

<h1>Creacion de contratos</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="inquilino-container">
                <button id="btn-asignar-inquilino" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalInquilino">
                    Asignar Inquilino
                </button>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
              <div class="form-group" id="inmueble-container">
                <button id="btn-asignar-inmueble" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalInmueble">
                    Asignar Inmueble
                </button>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaInicio" class="control-label"></label>
                <input asp-for="fechaInicio" class="form-control" />
                <span asp-validation-for="fechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaFinalizacion" class="control-label"></label>
                <input asp-for="fechaFinalizacion" class="form-control" />
                <span asp-validation-for="fechaFinalizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>


<div class="modal fade" id="ModalInquilino" tabindex="-1" role="dialog" aria-labelledby="Modalinquilino" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar Propietario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex justify-content-center align-items-center">
        <table>
            <tr>
                <th class="text-center"> ID </th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Apelido</th>
                <th class="text-center">Telefono</th>
            </tr>
            @foreach (var item in Inquilinos)
            {
                <tr>
                <td> @item.Id </td>
                   <td> @item.Nombre </td>
                   <td> @item.Apellido </td>
                   <td> @item.Telefono </td>
                   <td class="bg-info"><i data-dismiss="modal" id='@item.Id' class="fa-solid fa-plus fa-inquilino"></i></td>
                </tr>
            }
        </table>    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="ModalInmueble" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Asignar inmueble</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex justify-content-center align-items-center">
        <table>
            <tr>
                <th class="text-center"> ID </th>
                <th class="text-center"> Direccion </th>
            </tr>
            @foreach (var item in Inmuebles)
            {
                <tr>
                <td> @item.Id </td>
                   <td> @item.Direccion </td>
                   <td class="bg-info"><i data-dismiss="modal" id='@item.Id' class="fa-solid fa-plus fa-inmueble"></i></td>
                </tr>
            }
        </table>    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
