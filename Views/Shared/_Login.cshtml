@model PracticaMVC.Models.LoginView


<h1 class="text-center">Acceso</h1>
<form asp-action="Login" method="post" id="form_login">
  <div class="form-group">
    <label asp-for="Email">Email address</label>
    <input asp-for="Email" type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Enter email">
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Contraseña">Password</label>
    <input asp-for="Contraseña" type="password" class="form-control password" name="Contraseña" id="Contraseña" placeholder="Contraseña">
    <span asp-validation-for="Contraseña"></span>
  </div>
  <div class="form-group">
    <label for="repeat_password"> Repeat Password</label>
    <input type="password" class="form-control password" name="repeat_password" id="repeat_password" placeholder="Password">
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="show_password">
    <label class="form-check-label" for="exampleCheck1">Mostrar Contraseña</label>
  </div>
  <button type="submit" id="form_submit_btn" class="btn btn-primary my-2" disabled>Log In </button>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsParcial");}
}